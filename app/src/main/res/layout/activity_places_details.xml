<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_places_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mahmud.tourguide.PlacesInfo.PlacesDetailsActivity">

    <TextView
        android:id="@+id/placesDetailsAddressTV"
        android:layout_width="wrap_content"
        android:textSize="30sp"
        android:text="Ali Haider"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/placesDetailsRatingTV"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="3 star"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/placesDetailsPhoneNoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="01813180300" />
    <TextView
        android:id="@+id/placesDetailsReviewTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
